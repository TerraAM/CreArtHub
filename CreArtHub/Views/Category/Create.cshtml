@model CreArtHub.Domain.Entity.Category

@{
    ViewData["Title"] = "Создание";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("_GetSubMenu",new List<string> { "Категории", ViewData["Title"].ToString() })

<section class="contact-us section bg-gray" id="contact">
    <div class="container">

        <h1>Создание</h1>

        <h4>Категории</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Создать" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div id="cf-submit">
                <a asp-action="Index" id="contact-submit" class="btn btn-main">Обратно к списку</a>
            </div>
    </div>
</section>

