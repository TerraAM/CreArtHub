@model CreArtHub.Domain.Entity.User

@{
    ViewData["Title"] = "Удаление";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("_GetSubMenu",new List<string> { "Пользователи", ViewData["Title"].ToString() })
<section class="contact-us section bg-gray" id="contact">
    <div class="container">
        <h1>Удаление</h1>

        <h3>Вы уверены, что желаете это удалить?</h3>

        <div>
            <h4>Пользователь</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.AvatarPath)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.AvatarPath)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Password)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Password)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.About)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.About)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Skills)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Skills)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Role)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Role.Id)
                </dd class>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Удалить" class="btn btn-danger" />
                <p></p>
                <div id="cf-submit">
                    <a asp-action="Index" id="contact-submit" class="btn btn-main">Обратно к списку</a>
                </div>
            </form>
        </div>
    </div>
</section>
