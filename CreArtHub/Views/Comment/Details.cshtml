@model CreArtHub.Domain.Entity.Comment

@{
    ViewData["Title"] = "Подробности";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("_GetSubMenu",new List<string> { "Комментарии", ViewData["Title"].ToString() })

<section class="blog section bg-gray" id="contact">
    <div class="container">
        <h1>Подробности</h1>

        <div>
            <h4>Комментарий</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Content)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Content)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.IsEdit)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.IsEdit)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Post)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Post.Id)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Author.Id)
                </dd>
            </dl>
        </div>
        @await Html.PartialAsync("_patternDetailsButtom",Model.Id)
