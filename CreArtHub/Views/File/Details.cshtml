@model CreArtHub.Domain.Entity.File

@{
    ViewData["Title"] = "Подробности";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("_GetSubMenu",new List<string> { "Файлы постов", ViewData["Title"].ToString() })

<section class="contact-us section bg-gray" id="contact">
    <div class="container">
        <h1>Подробности</h1>

        <div>
            <h4>Файл</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.FileName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.FileName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.FilePath)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.FilePath)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Post)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Post.Title)
                </dd>
            </dl>
        </div>
        @await Html.PartialAsync("_patternDetailsButtom",Model.Id)
    </div>
</section>
